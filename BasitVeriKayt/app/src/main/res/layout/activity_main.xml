<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvYas"
        android:layout_width="167dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="Yaşınız :"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24" />

    <EditText
        android:id="@+id/ettYas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:hint="Yaşınızı giriniz"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tvYas"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnKayıt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="98dp"
        android:onClick="btnKayıt_Click"
        android:text="Kayıt"
        app:layout_constraintEnd_toEndOf="@+id/tvYas"
        app:layout_constraintTop_toBottomOf="@+id/tvYas" />

    <Button
        android:id="@+id/btnSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="23dp"
        android:onClick="btnSil_Click"
        android:text="Sil"
        app:layout_constraintStart_toEndOf="@+id/btnKayıt"
        app:layout_constraintTop_toBottomOf="@+id/tvYas" />

</androidx.constraintlayout.widget.ConstraintLayout>