<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NextActivity">

    <TextView
        android:id="@+id/tvKullaniciAdi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Kullanıcı Adı"
        app:layout_constraintBottom_toTopOf="@+id/tvGerçekAd"
        app:layout_constraintEnd_toEndOf="@+id/tvGerçekAd"
        app:layout_constraintStart_toStartOf="@+id/tvGerçekAd"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGerçekAd"
        android:layout_width="249dp"
        android:layout_height="0dp"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="533dp"
        android:gravity="center"
        android:text="Ad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvKullaniciAdi" />
</androidx.constraintlayout.widget.ConstraintLayout>